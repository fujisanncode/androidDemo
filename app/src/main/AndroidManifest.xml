<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <!-- 非危险权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- 危险权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--水果详情活动-->
        <activity
            android:name=".material.MaterialFruitActivity"
            android:theme="@style/FruitDetailTheme" />
        <!--水果列表活动-->
        <activity
            android:name=".material.MaterialActivity"
            android:label="你认识水果?"> <!-- 设置标题栏文字 -->
        </activity>
        <!--下载活动-->
        <activity android:name=".download.DownloadActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name=".MainActivity" />
        <!-- 启动进入登录活动 -->
        <activity
            android:name=".login.LoginActivity"
            android:label="登录">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 注册下载服务 -->
        <service
            android:name=".download.DownloadService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>